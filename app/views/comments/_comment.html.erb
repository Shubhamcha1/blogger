

<div class=" p-10 w-full mt-5 flex flex-col justify-start content-start item-start" id="<%= dom_id(comment) %>">
  
  <div class="flex flex-row flex-wrap justify-start content-start">
    <div>
    <img src="http://127.0.0.1:3000/assets/user_default-649704301cb9c912fb0472b01f54871a4ce38869c9941c41432a5b7414dfc148.png" class="rounded-full w-14 h-14"/>
      </div>
    <div class="flex flex-col justify-start content-center px-5">
      <div>
        <span class="text-2xl text-[#5e6676]"><%= comment.user.name.capitalize %></span>
        <span class="px-2"><%=link_to "Delete",reply_delete_path(blog_id: params[:blog_id] , comment_id: params[:comment_id]) ,class:"text-[#f0555f] text-sm"%></span>                       
      </div>
      <div>
        <span class="text-xs font-semibold text-[#4b4870] "><%= distance_of_time_in_words(comment.created_at, 76.seconds.from_now)     %></span>
      </div>
      
    </div>
  </div>
<div class="px-20 py-4">
  <span class="text-[#5e6676] text-base font-medium antialiased "><%= comment.body %></span>
</div>

  <div class="px-20 py-4">
  <span class="text-[#d3d3d3]"><%=link_to "Edit",reply_path(comment_id: comment.id ,blog_id: comment.blog_id),class:""%></span>
  </div>
 
</div>

