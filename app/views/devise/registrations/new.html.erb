<%=render "home/navigation" %>
<%= render "devise/shared/error_messages"%>
    
<div class="h-screen flex flex-col items-center content-center justify-center"> 

 <main class="flex flex-col items-center content-center justify-center">
      
<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 border-2 border-solid border-[#4b4870] rounded-md ">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark.svg?color=indigo&shade=600" alt="Workflow">
      <h2 class="mt-6 text-center text-3xl tracking-tight font-bold text-[#4b4870]">Sign up</h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: user_registration_path, class:"mt-8 space-y-6") do |f| %>
  <!--  <form class="mt-8 space-y-6" action="#" method="POST">-->
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
         
           <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#4b4870] focus:border-[#4b4870] focus:z-10 sm:text-sm" ,placeholder:"Email address" ,:required => true%>

      <!--    <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">-->
        </div>
          <div>
          <label for="fullname" class="sr-only">Fullname</label>
         
           <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#4b4870] focus:border-[#4b4870] focus:z-10 sm:text-sm my-2" ,placeholder:"Fullname" ,:required => true%>

      <!--    <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">-->
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
            
            <%= f.password_field :password, autocomplete: "new-password",class:"current-password", class:"appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#4b4870] focus:border-[#4b4870] focus:z-10 sm:text-sm my-2",
              placeholder:"Password" ,:required => true %>
        <!--  <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm my-2" placeholder="Password">-->
        </div>
         <div>
          <label for="password" class="sr-only">Password</label>
          

           <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-[#4b4870] focus:border-[#4b4870] focus:z-10 sm:text-sm my-2",placeholder:"Confirm Password" ,:required => true%>


<!--
            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm my-2" placeholder="Password">-->
        </div>
      </div>

      <div class="flex items-center flex-col justify-between my-5">
       
      </div>

      <div>

          <%= f.submit "Sign up" ,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#4b4870] hover:bg-[#4b4872] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

    <!--    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#2b3378] hover:bg-[#2b337] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Sign in
        </button>-->
      </div>

      <div class="flex item-center flex-col justify-center">
          <div class="pt-5 text-gray-900">
            <p>Already have an account? <span class="text-[#4b4870]">
            <%= render "devise/shared/links" %></span></p>
          </div>
      </div>
      <%end%>
 <!--   </form>-->
  </div>
</div>

</main>

</div>

