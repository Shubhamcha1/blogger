<%= render "home/navigation"%>
<section class="py-10 bg-[#f9f9fe]">
  <div class="flex flex-row flex-wrap justify-center content-start">
       <% @blogs.each do | b | %>
       <div class="w-8/12 px-5">
                <!-- This is the Tiles section of blogger  -->
            <div class="px-16 py-14 mb-10 shadow-md bg-white hover:shadow-lg dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 rounded">
                <div class="flex flex-row flex-wrap justify-center content-center item-center">
                   <% if b&.rich_text_description&.embeds&.first&.url != nil%>
                    <div class="w-1/4">
                        <img src="<%= b&.rich_text_description&.embeds&.first&.url %>" class="w-40 h-30 rounded">
                    </div>  
                    <div class=" w-3/4  flex flex-col flex-wrap justify-start align-start conten-start">
                        <% else %>
                    <div class=" w-full flex flex-col flex-wrap justify-start align-start conten-start">
                    <%end%>
                        <div class="w-full">
                        <% if b.title.size > 25 %>  
                         <p class="text-3xl font-semibold text-[#4b4870]"><%=h truncate(b.title.capitalize, :length => 30) %></p>
                        <% else %>
                        <p class="text-4xl font-semibold text-[#4b4870] py-2 mb-3"><%= b.title.capitalize%></p>      
                        <% end %>
                        </div>
                        <div class="flex flex-row flex-wrap justify-start content-center item-center mt-3">
                            <div class="pr-3 flex flex-col flex-wrap content-center justify-center">
                                <div>
                                  <span class="text-md font-semibold text-[#4b4870]"><%= b.created_at.strftime("%d %b %Y")%></span>
                                </div>
                            </div>
                            <div class="px-3 flex flex-row flex-wrap justify-left content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline stroke-2 stroke-[#f0555f]">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 01-.923 1.785A5.969 5.969 0 006 21c1.282 0 2.47-.402 3.445-1.087.81.22    1.668.337 2.555.337z" />
                            <span class="float text-[#5e6676] ml-2 text-xl leading-4 font-semibold text-[#4b4870]"><sub><%= b.comments.count%></sub></span>
                        </svg>
                        
                            </div>
                            <div class="px-2 flex flex-row flex-wrap justify-left content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline stroke-2 stroke-[#f0555f] ">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z" />
                                    <span class="text-[#5e6676] ml-2 text-xl leading-4 text-xl font-semibold text-[#4b4870]"><sub><%= b.likes.count %></sub></span>
                                </svg>
                            </div>
                            <div class="px-2 flex flex-row flex-wrap justify-left content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline stroke-2 stroke-[#f0555f]">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                     <span class="text-[#5e6676] ml-2 text-xl leading-4 font-semibold text-[#4b4870]"><sub><%=b.visit_count %></sub></span>
                                </svg>
                            </div>
                        </div>
                    </div> 
                </div>                  
                <div class="pt-4 pb-2">  
                <span class="leading-7 text-[#5e6676] text-base font-medium "><%= truncate(b.description.to_plain_text, :length => 100) %></span> 
                </div>
                <!--This is tag and user profile display section-->
                <div class=" flex flex-row flex-wrap justify-start content-center item-center">
                     <div class=" w-8/12  flex flex-row flex-wrap justify-start content-center ">
                        <% b.tags.each do |g| %>
                            <div class=" bg-white py-1 px-5 mr-4 rounded-full border border-[#f0555f] border-l-4 border-solid border-y-zinc-200 border-r-zinc-200">
                                <span class="text-[#4b4870]"><%= g.name.capitalize %></span>   
                            </div>
                        <% end %>
                    </div>  
                    <div class="w-4/12 flex flex-row justify-end content-center py-2">
                        <div class="flex items-center space-x-4">
                            <img class="w-10 h-10 rounded-full" src="https://ghost.estudiopatagon.com/maktub/content/images/size/w300h300/2022/05/mixkit-man-holding-the-brim-of-a-yellow-fedora-that-covers-93-desktop-wallpaper.png" alt="UserImage">
                            <div class="font-medium dark:text-white">
                                <div><%= b.user.name.capitalize%></div>
                                <div class="text-sm text-gray-500 dark:text-gray-400">Joined in <%= b.user.created_at.strftime("%b %Y")%></div>
                            </div>
                        </div>
                    </div>   
                </div>
                <div class="flex flex-row justify-center content-center mt-3">
                <%= link_to "Continue Reading",blog_path(b.id) ,class:"text-white bg-[#4b4870] dark:focus:ring-cyan-800 font-medium rounded-full text-sm px-6 py-3 text-center"%>
            </div>
            </div>  
           </div>  
    <%end%>
  </div>
</section>
<%= render "home/footer" %>